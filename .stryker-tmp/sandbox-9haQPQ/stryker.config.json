{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "packageManager": "pnpm",
  "testRunner": "vitest",
  "checkers": ["typescript"],
  "tsconfigFile": "tsconfig.json",
  "plugins": [
    "@stryker-mutator/vitest-runner",
    "@stryker-mutator/typescript-checker"
  ],
  "mutate": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "!src/**/*.test.ts",
    "!src/**/*.test.tsx",
    "!src/**/*.spec.ts",
    "!src/**/*.spec.tsx",
    "!src/test/**/*",
    "!src/main.tsx",
    "!src/App.tsx",
    "!src/vite-env.d.ts",
    "!src/theme.ts",
    "!src/components/ui/**",
    "!src/workers/**",
    "!src/types/**",
    "!src/config/**"
  ],
  "reporters": ["html", "clear-text", "progress"],
  "htmlReporter": {
    "fileName": "reports/mutation/index.html"
  },
  "thresholds": {
    "high": 80,
    "low": 60,
    "break": 50
  },
  "concurrency": 4,
  "timeoutMS": 15000,
  "timeoutFactor": 2.5,
  "disableTypeChecks": "{test,src}/**/*.{js,ts,jsx,tsx,html,vue,mts,cts}",
  "incremental": true,
  "incrementalFile": ".stryker-tmp/incremental.json",
  "ignorePatterns": [
    "node_modules",
    "dist",
    ".stryker-tmp",
    "reports"
  ],
  "mutator": {
    "excludedMutations": [
      "StringLiteral"
    ]
  }
}
